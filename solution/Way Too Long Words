#include <iostream>
#include <string>
using namespace std;
 
void solution(const string& s) {
    if (s.length() > 10) {
        cout << s[0] << s.length() - 2 << s[s.length() - 1] << endl;
    } else {
        cout << s << endl;
    }
}
 
int main() {
    int n;
    cin >> n;
    
    // Process each string
    while (n--) {
        string s;
        cin >> s;
        solution(s);
    }
    
    return 0;
}
